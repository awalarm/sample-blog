<h1>Запись всех статей</h1>

<% @articles.each do |article| %>
	
<h2><%= article.title  %></h2>

<p>
	<%= article.text %>
</p>

<p>
	<%= link_to 'Подробнее', article_path(article) %> |
	<%= link_to 'Редактировать', edit_article_path(article) %> |
	<%= link_to 'Удалить', article_path(article), method: :delete, data: { confirm: 'Точно удаляем?' } %>
</p>
<hr>

<% end %>
